@code {
  int _value = 0;

  async Task SimulateProgress()
  {
      do
      {
            _value += 4;
            this.StateHasChanged();
            await Task.Delay(500);
      } while(_value < 100);
  }  

  protected override async void OnInitialized() => await SimulateProgress();
}